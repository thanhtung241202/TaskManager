@model IEnumerable<TaskManager.Models.TaskItem>

<h2 class="text-center text-primary">📋 Danh sách công việc</h2>

<a asp-action="CreateTask" class="btn btn-success mb-3">➕ Thêm công việc</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Tiêu đề</th>
            <th>Ngày</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Date.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (item.IsDone)
                    {
                        <span class="badge bg-success">✅ Hoàn thành</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">⏳ Chưa xong</span>
                    }
                </td>
                <td>
                    <a asp-action="EditTask" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Sửa</a>
                    <a asp-action="DetailsTask" asp-route-id="@item.Id" class="btn btn-info btn-sm">ℹ️ Chi tiết</a>
                    <a asp-action="DeleteTask" asp-route-id="@item.Id" class="btn btn-danger btn-sm" 
                       onclick="return confirm('Bạn có chắc chắn muốn xóa?');">🗑️ Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
