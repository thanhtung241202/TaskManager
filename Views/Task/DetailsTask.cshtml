@model TaskManager.Models.TaskItem

<h2>Chi tiết công việc</h2>
<div class="alert alert-info">
    <h4>Công việc</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tiêu đề</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@(Model.Category?.Name ?? "Chưa phân loại")</dd>
        <dt class="col-sm-2">Ưu tiên</dt>
        <dd class="col-sm-10">
            @if (Model.Priority != null)
            {
                <span style="color: @(Model.Priority.Color)">@Model.Priority.Name</span>
            }
            else
            {
                <span>Chưa ưu tiên</span>
            }
        </dd>
        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@(Model.Status?.Name ?? "Chưa có trạng thái")</dd>
        <dt class="col-sm-2">Chi tiết</dt>
        <dd class="col-sm-10">@Model.Details</dd>
        <dt class="col-sm-2">Ngày</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>
<div>
    <a asp-action="EditTask" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
    <a asp-action="ListTasks" class="btn btn-info">Quay lại</a>
</div>